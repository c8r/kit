{
  "private": true,
  "name": "@compositor/kit",
  "description": "Components for development environments, style guides, and demos",
  "version": "1.0.0",
  "license": "MIT",
  "repository": "c8r/kit",
  "scripts": {
    "start": "x0 docs -o",
    "build": "lerna run build",
    "build:docs": "x0 build docs -d dist && cp -r docs/images dist",
    "clean": "lerna run clean",
    "bootstrap": "lerna bootstrap",
    "format": "prettier --no-semi --single-quote --write '{cli,core,create-kit,dev,docs,packages,snapshot,storybook,templates}/**/*.js'",
    "prepare": "lerna bootstrap && npm run clean && npm run build",
    "publish": "lerna publish",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@compositor/mono": "^1.0.0-14",
    "@compositor/x0": "^6.0.1",
    "@rebass/mdx": "^1.0.0-1",
    "lerna": "^2.11.0",
    "prettier": "^1.12.1"
  },
  "dependencies": {
    "styled-components": "^3.3.3"
  }
}
